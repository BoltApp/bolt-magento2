<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="connect_bolt" type="host">connect.bolt.com</value>
                <value id="connect-sandbox_bolt" type="host">connect-sandbox.bolt.com</value>
                <value id="account_bolt" type="host">account.bolt.com</value>
                <value id="account-sandbox_bolt" type="host">account-sandbox.bolt.com</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="connect_bolt" type="host">connect.bolt.com</value>
                <value id="connect-sandbox_bolt" type="host">connect-sandbox.bolt.com</value>
                <value id="account_bolt" type="host">account.bolt.com</value>
                <value id="account-sandbox_bolt" type="host">account-sandbox.bolt.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="connect_bolt" type="host">connect.bolt.com</value>
                <value id="connect-sandbox_bolt" type="host">connect-sandbox.bolt.com</value>
                <value id="account_bolt" type="host">account.bolt.com</value>
                <value id="account-sandbox_bolt" type="host">account-sandbox.bolt.com</value>
                <value id="sessions_bugsnag" type="host">sessions.bugsnag.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
