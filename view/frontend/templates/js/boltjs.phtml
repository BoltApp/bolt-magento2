/**
 * Track and Connect js template
 *
 * @var $block \Bolt\Boltpay\Block\Js
 */
if ($block->shouldDisableBoltCheckout()) return;
//check if we need Bolt on this page
if (!$block->IsCartOrCheckoutPage() && !$block->IsMinicartPage() && !$block->isProductPage()) return;

$trackJsUrl   = $block->getTrackJsUrl();
$connectJsUrl = $block->getConnectJsUrl();
$checkoutKey  = $block->getCheckoutKey();
?>
<script
    id="bolt-track"
    type="text/javascript"
    src="<?php echo $trackJsUrl; ?>"
    async
    data-publishable-key="<?php echo $checkoutKey; ?>">
</script>
<script
    id="bolt-connect"
    type="text/javascript"
    src="<?php echo $connectJsUrl; ?>"
    data-publishable-key="<?php echo $checkoutKey; ?>">
</script>
<script>
    // Prevent checkout to pop up until reconfigured in replacejs.html
    // Checkout may be restricted, i.e. guest checkout not allowed
    // The status is unknown at this point
    BoltCheckout.configure({},{},{check:function(){return false}});
</script>
