<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument name="title" xsi:type="string" translate="true">Credit Cards</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Bolt\Boltpay\Block\Customer\CreditCard" name="bolt_credit_cards_customer_account" template="customer/creditcard.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>
